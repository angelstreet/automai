# docker build -f DockerfilePlaywright -t app-playwright . 
# docker run -p 10000:10000 --env PORT=10000 app-playwright

FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Set non-interactive frontend to avoid debconf prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install Python dependencies directly
RUN pip install --no-cache-dir \
    flask==2.3.3 \
    flask-sock==0.7.0 \
    playwright==1.47.0 \
    python-dotenv==1.0.1 \
    requests==2.32.3 \
    uvicorn==0.28.0 \
    argparse==1.4.0 \
    asgiref==3.7.2

# Install system dependencies including Xvfb
RUN apt-get update && apt-get install -y \
    xvfb \
    git \
    iputils-ping \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Playwright dependencies and Chromium
RUN playwright install-deps \
    && playwright install chromium

# Copy application code
COPY . .

# Expose port for Flask (Render will override with PORT env var)
EXPOSE 10000

# Run Flask app with Xvfb, binding to Render's PORT
CMD ["sh", "-c", "xvfb-run --auto-servernum --server-args='-screen 0 1280x720x24' python app_playwright.py --debug --port $PORT"]