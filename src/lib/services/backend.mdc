    await startServer({
      dev,
      hostname,
      port,
      enableWebSockets: false
    });
  } catch (err) {
    console.error('Error starting server:', err);
    process.exit(1);
  }
}

// Handle graceful shutdown
process.on('SIGINT', async () => {
  await stopServer();
  process.exit(0);
});

// Start the server
main();
