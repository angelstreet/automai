# Server Configuration
PORT=3000
NODE_ENV=production

# Database
DATABASE_URL="postgresql://user:password@production-db-host:5432/automai_db"

# JWT
JWT_SECRET="your-super-secure-production-jwt-key"

# OAuth - Google
GOOGLE_CLIENT_ID="prod-google-client-id"
GOOGLE_CLIENT_SECRET="prod-google-client-secret"
GOOGLE_CALLBACK_URL="https://your-production-domain.com/api/auth/google/callback"

# OAuth - GitHub
GITHUB_CLIENT_ID="prod-github-client-id"
GITHUB_CLIENT_SECRET="prod-github-client-secret"
GITHUB_CALLBACK_URL="https://your-production-domain.com/api/auth/github/callback"

# Elasticsearch
ELASTICSEARCH_URL="https://your-elasticsearch-cluster:9200"

# NextAuth
NEXTAUTH_URL=https://your-production-domain.com
# Note: NEXTAUTH_SECRET will use JWT_SECRET automatically 